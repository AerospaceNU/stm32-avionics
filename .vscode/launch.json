  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) sim",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/desktop_sim/desktop_sim_live/desktop_sim_live",
      "args": ["/home/matt/Downloads/beanboozler_2_18-output-FCB-post.csv", "meta.csv", "external_flash.dat", "internal_flash.dat"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build live sim",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(gdb) Gtest tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/desktop_sim/desktop_sim_gtest/desktop_sim_test",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build gtest tests",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
  ]
}
